{
  "allowSyntheticDefaultImports": true,
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es6",
      "es2017.object",
    ],
    "module": "es6",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "removeComments": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es6",
    "paths": {
      "@data/*": ["src/data/*"],
      "@ui/*": ["src/ui/*"],
      "@core/*": ["src/core/*"],
    },
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "src/stories",
  ]
}
